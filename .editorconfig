[*]
charset=utf-8
end_of_line=lf
insert_final_newline=false
indent_style=space
indent_size=4

[{.babelrc,jest.config,.stylelintrc,.eslintrc,*.bowerrc,*.jsb3,*.jsb2,*.json}]
indent_style=space
indent_size=2

[{Makefile.*,makefile,Makefile,GNUmakefile,*.mk}]
indent_style=tab
tab_width=4

[*.csv]
indent_style=tab
tab_width=1

[*.tsv]
indent_style=tab
tab_width=1

[*.less]
indent_style=space
indent_size=2

[*.scss]
indent_style=space
indent_size=2

[*.js.map]
indent_style=space
indent_size=2

[{*.coffee,*.cjsx}]
indent_style=space
indent_size=2

[{*.config,*.yml,*.yaml}]
indent_style=space
indent_size=2

